import sys


n = int(sys.stdin.readline())
nums = []
for _ in range(n):
    nums.append(int(sys.stdin.readline()))

nums.sort()
sum = 0   
while True:
    tmp = nums[0] + nums[1]
    sum += tmp
    if len(nums) <= 2:
        break
    nums = nums[2:] + [tmp]
    # 삽입정렬 : 거의 정렬되어 있을 때 유리하다. 
    for i in range(len(nums)-1, 0, -1):
        if nums[i] < nums[i-1]:
            nums[i], nums[i-1] = nums[i-1], nums[i]
        else:
            break

    
print(sum)